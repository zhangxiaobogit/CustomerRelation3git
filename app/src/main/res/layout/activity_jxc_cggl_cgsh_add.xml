<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#0099cc">

        <ImageButton
            android:id="@+id/fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/fh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/cgsh"
            android:textColor="#ffffff"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/save_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/save" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/djbh"
            android:textSize="@dimen/jxc_cggl_cgdd" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/djbh_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/jxc_cggl_cgdd" />

            <ImageView
                android:id="@+id/sh_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/wsh" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_about_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/gldjcg"
            android:textSize="@dimen/jxc_cggl_cgdd" />

        <ImageView
            android:id="@+id/iv_show_goodsid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/xyb_jt"
            android:padding="10dp"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/mTogBtn"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View style="@style/underline2" />

    <LinearLayout
        android:id="@+id/gldjcg_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:background="@color/cgdd_search_bg"></LinearLayout>

        <View style="@style/underline2" />

        <LinearLayout
            android:id="@+id/xzxsdd_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/gys" />

                <EditText
                    android:id="@+id/gys2_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/ck" />

                <EditText
                    android:id="@+id/ck_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:layout_weight="1"
                    android:text="@string/xzcgd"
                    android:textColor="@color/title_color" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/add_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/rkck" />

                <EditText
                    android:id="@+id/rkck_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/gys" />

                <EditText
                    android:id="@+id/gys_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/lxr" />

                <EditText
                    android:id="@+id/lxr_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/lxdh" />

                <EditText
                    android:id="@+id/lxdh_edittext"
                    style="@style/edittext_bj"
                    android:inputType="phone" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/fplx" />

                <EditText
                    android:id="@+id/et_fplx"
                    style="@style/edittext_bj2" />

                <ImageView
                    style="@style/imageview_jt"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="收款日期" />

                <EditText
                    android:id="@+id/et_shrq"
                    style="@style/edittext_bj2" />

                <ImageView
                    style="@style/imageview_jt"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <View style="@style/underline" />


            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/xm" />

                <EditText
                    android:id="@+id/xm_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View
                style="@style/underline"
                android:visibility="gone" />

            <LinearLayout
                style="@style/detail_relativelayout"
                android:visibility="gone">

                <TextView
                    style="@style/font_default"
                    android:text="@string/jhdz" />

                <EditText
                    android:id="@+id/jhdz_edittext"
                    style="@style/edittext_bj" />
            </LinearLayout>

            <View style="@style/underline2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/cgdd_search_bg"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:text="@string/shsp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/jxc_cggl_cgdd" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_import"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_blue_select"
                    android:padding="5dp"
                    android:text="导入"
                    android:textColor="@color/background_white"
                    android:textSize="@dimen/jxc_cggl_cgdd"
                    android:visibility="gone" />
            </LinearLayout>

            <View style="@style/underline2" />

            <LinearLayout
                android:id="@+id/xzsp_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dip"
                android:paddingBottom="10dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xzsp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xzsp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/jxc_cggl_cgdd" />

                <TextView
                    android:id="@+id/xzspnum_textview"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" />

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/scan" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline2" />

            <com.cr.tools.CustomListView
                android:id="@+id/xzsp_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:listSelector="@android:color/transparent"></com.cr.tools.CustomListView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="15dip"
                android:background="@color/cgdd_search_bg"></LinearLayout>

            <View style="@style/underline2" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/gysqk" />

                <EditText
                    android:id="@+id/gysqk_edittext"
                    style="@style/edittext_bj"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/hjje" />

                <EditText
                    android:id="@+id/hjje_edittext"
                    style="@style/edittext_bj2"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/fkje" />

                <EditText
                    android:id="@+id/fkje_edittext"
                    style="@style/edittext_bj"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/fklx" />

                <EditText
                    android:id="@+id/fklx_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout
                style="@style/detail_relativelayout"
                android:visibility="gone">

                <TextView
                    style="@style/font_default"
                    android:text="@string/jsfs" />

                <EditText
                    android:id="@+id/jsfs_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View
                style="@style/underline"
                android:visibility="gone" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/zjzh" />

                <EditText
                    android:id="@+id/zjzh_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>


            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="物流公司" />

                <EditText
                    android:id="@+id/et_wlgs"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="代付账户" />

                <EditText
                    android:id="@+id/et_dszh"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="代付金额" />

                <EditText
                    android:id="@+id/et_dsje"
                    style="@style/edittext_bj"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="付款合计" />

                <EditText
                    android:id="@+id/et_skhj"
                    style="@style/edittext_bj"
                    android:inputType="numberDecimal" />
            </LinearLayout>


            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/djrq" />

                <EditText
                    android:id="@+id/djrq_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="部门" />

                <EditText
                    android:id="@+id/et_bm"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout">

                <TextView
                    style="@style/font_default"
                    android:text="@string/jbr" />

                <EditText
                    android:id="@+id/jbr_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="15dip"
                android:background="@color/cgdd_search_bg"></LinearLayout>
            <include layout="@layout/activity_include_zdr"
                android:visibility="gone"/>
            <View style="@style/underline2" />


            <EditText
                android:id="@+id/bzxx_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/bzxx"
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" />

            <LinearLayout
                android:id="@+id/ll_edit_order"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sh_button"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sh"
                    android:textColor="#ff0000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/sd_button"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sd"
                    android:textColor="#ff0000"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>